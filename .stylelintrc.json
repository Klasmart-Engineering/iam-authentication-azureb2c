{
    "extends": "stylelint-config-standard",
    "plugins": ["stylelint-order", "stylelint-no-unsupported-browser-features"],
    "rules": {
        "order/properties-alphabetical-order": true,
        "indentation": 4,
        "plugin/no-unsupported-browser-features": [
            true,
            {
                "severity": "warning"
            }
        ]
    }
}
