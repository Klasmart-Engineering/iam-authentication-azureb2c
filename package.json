{
    "name": "iam-authentication-azureb2c",
    "version": "1.0.1",
    "description": "Azure B2C custom HTML, JS and Policies",
    "main": "index.js",
    "module": "commonjs",
    "scripts": {
        "check": "npm run check:types && npm run check:eslint && npm run check:js && npm run check:css",
        "check:eslint": "eslint . --ext .ts",
        "check:types": "tsc --noEmit",
        "check:js": "prettier --check .",
        "check:css": "stylelint \"**/*.css\"",
        "lint:js": "eslint . --ext .ts --fix",
        "lint:css": "stylelint \"**/*.css\"",
        "lint": "npm run lint:js && npm run lint:css",
        "format:js": "prettier --write .",
        "format:css": "stylelint \"**/*.css\" --fix",
        "format": "npm run format:js && npm run format:css",
        "clean": "rm -rf dist",
        "build": "webpack",
        "update-translations": "ts-node ./scripts/updateLocalizationXmlWithNewTranslations"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@bitbucket.org/calmisland/iam-authentication-azureb2c.git"
    },
    "keywords": [
        "Azure B2C"
    ],
    "author": "KidsLoop",
    "license": "ISC",
    "bugs": {
        "url": "https://bitbucket.org/calmisland/iam-authentication-azureb2c/issues"
    },
    "homepage": "https://bitbucket.org/calmisland/iam-authentication-azureb2c#readme",
    "browserslist": [
        "last 2 Chrome versions",
        "last 2 ios_saf major versions",
        "last 2 safari versions",
        "last 2 android versions",
        "last 2 and_chr versions"
    ],
    "devDependencies": {
        "@babel/cli": "7.16.0",
        "@babel/core": "7.16.0",
        "@babel/preset-env": "7.16.0",
        "@babel/preset-typescript": "7.16.0",
        "@types/dompurify": "2.3.1",
        "@types/node": "16.11.10",
        "@types/xml2json": "0.11.4",
        "@typescript-eslint/eslint-plugin": "5.3.0",
        "@typescript-eslint/parser": "5.3.0",
        "babel-loader": "8.2.3",
        "css-loader": "6.5.1",
        "css-minimizer-webpack-plugin": "3.1.4",
        "eslint": "8.1.0",
        "eslint-config-prettier": "8.3.0",
        "extract-loader": "5.1.0",
        "fast-glob": "3.2.7",
        "file-loader": "6.2.0",
        "html-loader": "3.0.1",
        "ieftool": "1.0.7",
        "prettier": "2.4.1",
        "stylelint": "14.0.1",
        "stylelint-config-standard": "23.0.0",
        "stylelint-no-unsupported-browser-features": "5.0.2",
        "stylelint-order": "5.0.0",
        "ts-node": "10.4.0",
        "typescript": "4.4.4",
        "webpack": "5.62.2",
        "webpack-cli": "4.9.1",
        "xml2json": "0.12.0"
    },
    "dependencies": {
        "dompurify": "2.3.3"
    }
}
